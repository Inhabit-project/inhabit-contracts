{
	"name": "inhabit-contracts",
	"scripts": {
		"chain": "hardhat node --tags localhost",
		"clean": "NODE_ENV=celoAlfajores hardhat clean && rm -rf cache",
		"compile": "NODE_ENV=celoAlfajores hardhat compile",
		"coverage": "SOLIDITY_COVERAGE=true hardhat coverage",
		"create:safe": "bun run scripts/create-safe-multisig.ts",
		"deploy:celo": "hardhat deploy --network celo --tags celo",
		"deploy:celoAlfajores": "NODE_ENV=celoAlfajores hardhat deploy --network celoAlfajores --tags celoAlfajores",
		"deploy:localhost": "hardhat deploy --network localhost --tags localhost",
		"format": "prettier --write .",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"tast:addCampaign:celoAlfajores": "NODE_ENV=celoAlfajores bun hardhat addCampaign --network celoAlfajores",
		"test": "NODE_ENV=celoAlfajores hardhat test",
		"typechain": "hardhat typechain"
	},
	"dependencies": {},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
