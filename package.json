		"@nomicfoundation/hardhat-ignition": "^0.15.12",
		"@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
		"@nomicfoundation/hardhat-toolbox": "^6.0.0",
		"@nomicfoundation/hardhat-toolbox-viem": "^4.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.14",
		"@nomicfoundation/ignition-core": "^0.15.12",
		"@openzeppelin/contracts": "^5.3.0",
		"@openzeppelin/contracts-upgradeable": "^5.3.0",
		"@openzeppelin/hardhat-upgrades": "^3.9.1",
		"@safe-global/api-kit": "^4.0.0",
		"@safe-global/protocol-kit": "^6.1.0",
		"@safe-global/types-kit": "^3.0.0",
		"@typechain/ethers-v6": "^0.5.1",
		"@typechain/hardhat": "^9.1.0",
		"chai-bigint": "^0.2.0",
		"dotenv": "^17.2.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
