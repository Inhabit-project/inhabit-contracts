{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,

		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"./hardhat.config.ts",
		"./scripts",
		"./deploy",
		"./tasks",
		"./test"
	],
	"exclude": ["node_modules"]
}
